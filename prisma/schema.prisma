generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(cuid())
  code      String    @unique
  name      String
  password  String
  role      String    @default("EMPLOYEE")
  orders    Order[]
  payments  Payment[]
  createdAt DateTime  @default(now())
}

model Customer {
  id        String    @id @default(cuid())
  code      String    @unique
  name      String
  phone     String?
  phone2    String?
  address   String?
  orders    Order[]
  payments  Payment[]
}

model Product {
  id          String      @id @default(cuid())
  modelNo     String
  description String?
  material    String?
  color       String
  stockQty    Int         @default(0)
  price       Float
  status      String      @default("OPEN") 
  orderItems  OrderItem[]

  @@unique([modelNo, color])
}

model Safe {
  id              String    @id @default(cuid())
  name            String
  orders          Order[]
  payments        Payment[] @relation("SourceSafe")
