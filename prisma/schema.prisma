generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  password  String
  role      String   @default("EMPLOYEE")
  orders    Order[]
}

model Customer {
  id      String  @id @default(cuid())
  code    String  @unique
  name    String
  phone   String?
  address String?
  orders  Order[]
}

model Product {
  id          String      @id @default(cuid())
  modelNo     String
  description String?
  material    String?
  color       String
  stockQty    Int         @default(0)
  price       Float
  orderItems  OrderItem[]

  @@unique([modelNo, color])
}

