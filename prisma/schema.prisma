generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  password  String
  role      String   @default("EMPLOYEE")
  orders    Order[]
  payments  Payment[]
  createdAt DateTime  @default(now())
}

model Customer {
  id        String    @id @default(cuid())
  code      String    @unique
  name      String
  phone     String?
  phone2    String?
  address   String?
  orders    Order[]
  payments  Payment[]
}

model Product {
  id          String      @id @default(cuid())
  modelNo     String
  description String?
  material    String?
  color       String
  stockQty    Int         @default(0)
  price       Float
  status      String      @default("OPEN") 
  orderItems  OrderItem[]

  @@unique([modelNo, color])
}

model Safe {
  id        String    @id @default(cuid())
  name      String
  orders    Order[]
  payments  Payment[]
  createdAt DateTime  @default(now())
}

model Order {
  id          String      @id @default(cuid())
  orderNo     Int         @default(autoincrement())
  createdAt   DateTime    @default(now())
  deposit     Float       @default(0.0)
  totalAmount Float
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  customerId  String
  customer    Customer    @relation(fields: [customerId], references: [id])
  safeId      String?
  safe        Safe?       @relation(fields: [safeId], references: [id])
  items       OrderItem[]
}

model OrderItem {
  id              String  @id @default(cuid())
  orderId         String
  order           Order   @relation(fields: [orderId], references: [id])
  productId       String
  product         Product @relation(fields: [productId], references: [id])
  quantity        Int
  price           Float
  discountPercent Int     @default(0) // üëà ÿßŸÑÿ•ÿ∂ÿßŸÅÿ© ÿßŸÑÿ¨ÿØŸäÿØÿ©: ŸÜÿ≥ÿ®ÿ© ÿßŸÑÿÆÿµŸÖ
}

model Payment {
  id         String   @id @default(cuid())
  receiptNo  Int      @default(autoincrement())
  createdAt  DateTime @default(now())
  amount     Float
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  safeId     String
  safe       Safe     @relation(fields: [safeId], references: [id])
}